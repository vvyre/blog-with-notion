{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "components/*": ["./_components/*"],
      "constants/*": ["./_constants/*"],
      "hooks/*": ["./_hooks/*"],
      "styles/*": ["./_styles/*"],
      "stores/*": ["./_stores/*"],
      "utils/*": ["./_utils/*"],
      "types/*": ["./+types/*"],
      "#/*": ["./public/*"],
      "scripts": ["./scripts/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".storybook/stories/**/*.stories.tsx",
    ".storybook/stories/**/*.stories.ts",
    "_components/tally/tally.jsx"
  ],
  "exclude": ["node_modules"]
}
